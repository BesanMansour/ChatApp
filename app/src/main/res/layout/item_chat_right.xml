<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ItemChatshowMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_right"
        android:padding="8dp"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ItemTimeTxt" />

    <TextView
        android:id="@+id/ItemTxtSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemChatshowMsg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="kjfsb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/ItemTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00 AM"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toStartOf="@+id/ItemChatshowMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- هنا ستظهر الأوقات المنسقة -->


</androidx.constraintlayout.widget.ConstraintLayout>